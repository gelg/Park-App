<%- include("../partials/header"); -%>
<% if((error && error.length > 0) || (success && success.length > 0) || (warning && warning.length > 0)){ %>
<%  var margin = 0;%>
<% } else{%>
<% var margin = 5;%>
<%}%>
<div class="container" style="margin-top: <%=margin%>%;">
    <main role="main" class="inner cover">
      <div class="row justify-content-center text-center">
        <h1 class="cover-heading mt-5 col-xl-12 logo"><%=park.name%></h1>
      </div>
      <div class="row justify-content-center text-center">
        <h2 class="cover-heading  col-xl-12 secondary-text-navy" >Review</h2>
      </div>
    </main>
</div>

<div class="container form-style">
  <form action="/parks/<%=park._id%>/reviews" method="post">

    <div class="form-row justify-content-center mb-5">
      <h4 class="col-sm-12 secondary-text-navy">Rating:</h4>
      <input id="rating" type="text" class="form-control col-sm-12" name= "rating"; placeholder="Rating from 1 to 10">
    </div>

    <div class="form-row justify-content-center mb-5">
      <h4 class="col-sm-12 secondary-text-navy">Review:</h4>
      <input id="reason" type="text" class="form-control col-sm-12" name= "reason"; placeholder="Write your review here">
    </div>


    <div class="form-row float-right">
      <div class="col-sm-12 mb-5">
        <button type="submit" class="btn btn-info pl-md-3 pr-md-3 pl-lg-4 pr-lg-4 pt-md-0 pb-md-1 secondary-text" >Add</button>
      </div>
    </div>

  </form>
</div>

<%- include("../partials/footer"); -%>
