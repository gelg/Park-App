<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/park-app.css">
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script type="text/javascript" src="/js/bootstrap.js"> </script>
    <link href="https://fonts.googleapis.com/css?family=Lobster|Pacifico&display=swap" rel="stylesheet">
    <title> Park Application</title>
  </head>
  <body>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top" style=" background-color: #00004f;">
          <a class="navbar-brand" href="/" style="font-family: 'Pacifico', cursive;">Park App</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link" href="/about" style="color: white;">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/parks" style="color: white;">Parks</a>
              </li>
            </ul>
            <ul class="navbar-nav ml-auto">
              <% if(!user){ %>
                <li class="nav-item">
                  <a class="nav-link" href="/register" style="color: white;">Sign Up</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/login" style="color: white;">Log In</a>
                </li>
              <% } else {%>
                <li class="nav-item">
                  <a class="nav-link" href="#" style="color: white; font-family: 'Lobster', cursive;"> <%= user.displayName%></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout" style="color: white;">Log Out</a>
                </li>
              <% } %>
            </ul>
          </div>
        </nav>
        <% if(success && success.length > 0){ %>
          <div class="container" style="width: 60%; ">
            <div class="row justify-content-center mt-5">
              <div class="alert alert-info" role="alert"> <h5><%= success %> </h5></div>
            </div>
          </div>
        <% } %>
        <% if(error && error.length > 0){ %>
          <div class="container" style="width: 60%;">
            <div class="row justify-content-center mt-5" style="margin-top: 10%">
            <div class="alert alert-danger" role="alert">  <h5><%= error %></h5> </div>
            </div>
          </div>
        <% } %>
        <% if(warning && warning.length > 0){ %>
          <div class="container" style="width: 60%;">
            <div class="row justify-content-center mt-5" style="margin-top: 10%">
            <div class="alert alert-warning" role="alert">  <h5><%= warning %></h5> </div>
            </div>
          </div>
        <% } %>
