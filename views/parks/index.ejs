<%- include("../partials/header"); -%>
<% if((error && error.length > 0) || (success && success.length > 0) || (warning && warning.length > 0)){ %>
<%  var margin = 0;%>
<% } else{%>
<% var margin = 3;%>
<%}%>
  <div class="container" style="margin-top: <%=margin%>%;">
      <main role="main" class="inner cover">
        <div class="row justify-content-center">
          <h1 class="cover-heading mt-5 logo" >Park App</h1>
        </div>
        <div class="row justify-content-center mt-2">
          <h6>These are all the parks on Park App</h6>
        </div>
        <div class="row justify-content-center">
          <h6>Don't see a park, but want it on Park App</h6>
        </div>
        <div class="row justify-content-center">
          <a href="/parks/new">
            <button class="btn btn-info" type="submit">Add a New Park</button>
          </a>
        </div>
      </main>
  </div>

  <div class="container mt-5">
    <div class="row flex text-center">
      <% parks.forEach(function(park){%>
        <div class="col-md-6 col-lg-4 mb-3">
          <div class="thumbnail">
            <img src="<%= park.images[0] %>" class="image rounded">
              <div class="caption">
                <h6 class="secondary-text"><strong> <%= park.name %> </strong></h6>
              </div>
              <div class="caption">
                <h6 class="display"> Posted By: <%= park.author %></h6>
              </div>
              <div class="caption">
                <h6 class="display"> <%= park.city %>, <%= park.state %> </h6>
              </div>
              <div>
                <a href="/parks/<%=park._id%>"><button class="btn btn-sm btn-info pl-md-1 pr-md-1 pl-lg-1 pr-lg-1 pt-md-0 pb-md-1 secondary-text" type="button">More Info</button></a>
              </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>




<%- include("../partials/footer"); -%>
